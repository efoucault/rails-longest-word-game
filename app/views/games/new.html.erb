<div class="container">
  <% start_time = Time.now %>
  <h1>New game</h1>
  <ul class="list-inline">
    <% @letters.each do |letter| %>
      <li class="list-inline-item"> <%= letter %> </li>
    <% end %>
  </ul>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag "letters", @letters %>
    <%= hidden_field_tag "start_time", start_time %>
    <input type="text" class="field" name="word"><input type="submit" class="button" value="Play">
  </form>
</div>
